package main

import (
	"fmt"

	"github.com/Hunobas/nomadcoin/person"
)

func main() {
	// If you want to do this, you have to change the all member to first-UpperCase words(Pascal)
	//nico := person.Person{"nico", 12}
	nico := person.Person{}
	nico.SetDetails("nico", 12)

	// (p *Person) 이라고 두었기 때문에 nico 변수가 복사가 되지 않고 원본을 그대로 보냄
	fmt.Println("Main's 'nico'", nico)

	// 간단한 (get)Name함수의 경우 크기도 작고 값을 바꿀 일도 없으므로 복사 사용(참조x)
	fmt.Println(nico.Name())
}